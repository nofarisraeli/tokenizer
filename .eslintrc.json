{
    "env": {
        "node": true,
        "es2017": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "indent": ["error", 4,{
          "SwitchCase": 1
        }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-plusplus": "off",
        "class-methods-use-this": "off",
        "max-len": ["error", 150],
        "no-async-promise-executor": "off",
        "no-param-reassign": "off",
        "import/prefer-default-export": "off",
        "radix": "off"
    }
}
